<%-include('header')-%>

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
         
            <div class="title pb-5">
                <h2 class="font-weight-bold fs-1 text-center">Login System</h2>
                <h4 class="text-center">Log in for the existing user</h4>
            </div>
            <form action="/login" method="POST" class="pt-1">
                <div class="form-group">
                    <input type="email" 
                    class="form-control fs-4" 
                    placeholder="Email" 
                    name="email"
                    value="<%=emailGiv%>">
                </div>
                <p id="error-msg" class="fs-4" style="color:rgb(47, 47, 170) "><%=emailErr%></p>
                <div id="emailmsg" class="fs-4" style="color:rgb(44, 53, 175);display:none">Please fill the required</div>
                <div class="form-group mt-3">
                    <input type="password" 
                    class="form-control fs-4" 
                    name="password" 
                    placeholder="Password" 
                    >
                </div>
                <p id="error-msg" class="fs-4" style="color:rgb(47, 47, 170) "><%=passwordErr%></p>
                <button type="submit" class="btn btn-info mt-3 fs-4 mx-auto">Submit</button>

            </form>
            <p class="fs-4 mt-5">New User? <a href="/" class="fs-4">SignUp</a></p>   
    </div>
</div>
 <script src="/static/validate.js">

 </script>   

    
<%-include('footer')-%>
