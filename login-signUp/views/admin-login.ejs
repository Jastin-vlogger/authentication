<%-include('header')-%>

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
         
            <div class="title pb-5">
                <h2 class="font-weight-bold fs-1 text-center">Login System</h2>
                <h4 class="text-center">Log in for adminstrator</h4>
            </div>
            <form action="/admin" method="POST" class="pt-1">
                <div class="form-group">
                    <input type="email" 
                    id="email"
                    class="form-control fs-4" 
                    placeholder="Email" 
                    name="email"
                    value="<%=nameVal%>"
                    >  
                </div>
                <p id="error-msg" class="fs-4" style="color:rgb(47, 47, 170) "><%=nameError%></p>
                <div id="emailmsg" class="fs-4" style="color:rgb(47, 47, 170);display:none">Please fill the required</div>
                <div class="form-group mt-3">
                    <input type="password" 
                    class="form-control fs-4" 
                    name="password" 
                    placeholder="Password" >
                </div>
                <p id="error-msg" class="fs-4" style="color:rgb(47, 47, 170) "><%=passErr%></p>

                <button type="submit" class="btn btn-info mt-3 fs-4 mx-auto">Submit</button>
            </form>
            <p class="fs-4 mt-5">New User? <a href="/" class="fs-4">SignUp</a></p>  

           
           
    </div>
       
            
        
    
</div>
    

    
<%-include('footer')-%>