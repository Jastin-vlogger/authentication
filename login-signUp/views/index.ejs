<%-include('header')-%>

    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            <div class="col-12 mx-auto">
                <a href="/admin/login" class="btn btn-info btn-lg mb-3 float-end">Admin Login</a>
            </div>



            <!-- LOGIN FORM -->
            <form action="/signup" method="post" id="signup">
                <div class="form-group">
                    <label class="fs-4">Name</label>
                    <input type="text" class="form-control fs-4" name="name" value="<%=nameVal%>">
                </div>

                <div class="form-group">
                    <label class="fs-4">Email</label>
                    <input type="email" class="form-control fs-4" name="email">
                </div>
                <p class="fs-4" style="color:rgb(47, 47, 170)">
                    <%=emailError%>
                </p>
                <div class="form-group">
                    <label class="fs-4">Password</label>
                    <input type="password" class="form-control fs-4" name="password">
                </div>
                <div id="emailmsg" class="fs-4" style="color:rgb(47, 47, 170);display:none">Please fill the required
                </div>

                <button type="submit" class="btn btn-warning btn-lg fs-4">Signup</button>
                <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google"></span> SignIn with Google</a>
            </form>

            <hr>

            <p class="fs-4">Already have an account? <a href="/login" class="fs-4">Login</a></p>

        </div>
    </div>

